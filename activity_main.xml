<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#0B0B0D">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WristBud Emergency SMS"
        android:textSize="24sp"
        android:textColor="#0BAF5A"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Service Control Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency Monitoring Service"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enable Service"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC" />

                <Switch
                    android:id="@+id/serviceSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="#0BAF5A"
                    android:trackTint="#333333"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

            </LinearLayout>

            <TextView
                android:id="@+id/statusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Status: STOPPED"
                android:textSize="14sp"
                android:textColor="#FF6B6B"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Statistics Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Statistics"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/lastCheckText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Check: Never"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/sentCountText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SMS Sent Today: 0"
                android:textSize="14sp"
                android:textColor="#CCCCCC" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Test Button -->
    <Button
        android:id="@+id/testButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test SMS Functionality"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFC107"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:textSize="16sp" />

    <!-- API Config Button -->
    <Button
        android:id="@+id/configIpButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configure API IP"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2196F3"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:textSize="16sp" />

    <!-- Information Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How it works"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Monitors WristBud server for critical health alerts\n• Automatically sends SMS to emergency contacts\n• Runs in background even when app is closed\n• Includes user location in emergency messages"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Footer -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WristBud Emergency SMS Sender v1.0"
        android:textSize="12sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginTop="24dp" />

</LinearLayout>
